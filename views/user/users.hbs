<form action="/users/list" method="post" id="form1">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Users</th>
                <th scope="col">Admin</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{name}}</td>
                {{#if admin}}
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="check{{id}}" id="check{{id}}"
                            value="1" checked>
                        <label class="form-check-label" for="check{{id}}">
                            Admin
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="check{{id}}" id="check{{id}}"
                            value="0">
                        <label class="form-check-label" for="check{{id}}">
                            No admin
                        </label>
                    </div>
                </td>
                {{else}}
                <td>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="check{{id}}" id="check{{id}}"
                            value="1" >
                        <label class="form-check-label" for="check{{id}}">
                            Admin
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="check{{id}}" id="check{{id}}"
                            value="0" checked>
                        <label class="form-check-label" for="check{{id}}">
                            No admin
                        </label>
                    </div>
                </td>

            </tr>
            {{/if}}
            {{/each}}
        </tbody>
        <button id="cambios">Guardar cambios</button>
    </table>
</form>